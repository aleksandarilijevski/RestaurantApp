<UserControl x:Class="RestaurantApp.Views.ArticleDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp.Views"
             mc:Ignorable="d" 
             Height="600"  Width="1200">
    <Grid>
        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" ItemsSource="{Binding Article.ArticleDetails, IsAsync=True}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}"/>
                <DataGridTextColumn Header="Article name" Binding="{Binding Article.Name}" />
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="Entry price" Binding="{Binding EntryPrice}"/>
                <DataGridTextColumn Header="Created date time" Binding="{Binding CreatedDateTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
