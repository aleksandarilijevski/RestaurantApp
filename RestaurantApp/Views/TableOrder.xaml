                <Button Content="12" BorderThickness="0" Style="{StaticResource RhomboidButton}" FontSize="25" Command="{Binding OrderingCommand}" CommandParameter="12" Background="Transparent" RenderTransformOrigin="0.658,0.42" Canvas.Left="613" Canvas.Top="262" Height="82" Width="89" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="12"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Name="HoverRectangle" Stroke="Black" StrokeThickness="1"  Fill="Transparent" RadiusX="4" RadiusY="4">
                                    <Rectangle.LayoutTransform>
                                        <RotateTransform Angle="45"/>
