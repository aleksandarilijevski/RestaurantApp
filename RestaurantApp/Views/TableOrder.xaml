                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="5" BorderThickness="0" FontSize="25" Style="{StaticResource HorizontalRectangleButton}" Command="{Binding OrderingCommand}" CommandParameter="5" Background="Transparent" RenderTransformOrigin="0.658,0.42" Canvas.Left="575" Canvas.Top="26" Width="75" Height="44" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="5"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1"  Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Content="6" BorderThickness="0" FontSize="25" Style="{StaticResource HorizontalRectangleButton}" Command="{Binding OrderingCommand}" CommandParameter="6" Background="Transparent" RenderTransformOrigin="0.658,0.42" Canvas.Left="718" Canvas.Top="26" Height="44" Width="75" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="6"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1"  Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="7" BorderThickness="0" FontSize="25" Style="{StaticResource VerticalRectangleButton}" Command="{Binding OrderingCommand}" CommandParameter="7" Background="Transparent" Canvas.Left="771" Canvas.Top="112"  Height="78" Width="44">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="7"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1"  Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="8" BorderThickness="0" FontSize="25" Style="{StaticResource VerticalRectangleButton}" Command="{Binding OrderingCommand}" CommandParameter="8" Background="Transparent" RenderTransformOrigin="0.658,0.42" Grid.ColumnSpan="2" Canvas.Left="771" Canvas.Top="260" Height="75" Width="44" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="8"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1"  Fill="Transparent" RadiusX="5" RadiusY="5"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="9" BorderThickness="0" FontSize="25" Command="{Binding OrderingCommand}" CommandParameter="9" Background="Transparent" RenderTransformOrigin="0.658,0.42" Canvas.Left="467" Canvas.Top="135" Height="83" Width="84" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="9"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Duration="0:0:0.250" To="0" Storyboard.TargetProperty="BorderThickness" />
                                                <DoubleAnimation Duration="0:0:0.100" To="70" Storyboard.TargetProperty="Height" />
                                                <DoubleAnimation Duration="0:0:0.100" To="90" Storyboard.TargetProperty="Width" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ThicknessAnimation Duration="0:0:0.250" To="0" Storyboard.TargetProperty="BorderThickness" />
                                                <DoubleAnimation Duration="0:0:0.100" To="80" Storyboard.TargetProperty="Height" />
                                                <DoubleAnimation Duration="0:0:0.100" To="90" Storyboard.TargetProperty="Width" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1" Fill="Transparent" RadiusX="4" RadiusY="4">
                                    <Rectangle.LayoutTransform>
                                        <RotateTransform Angle="45"/>
                                    </Rectangle.LayoutTransform>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="10" BorderThickness="0" Style="{StaticResource RhomboidButton}" FontSize="25" Command="{Binding OrderingCommand}" CommandParameter="10" Background="Transparent" RenderTransformOrigin="0.658,0.42" Canvas.Left="615" Canvas.Top="135" Height="83" Width="84" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="10"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1" Fill="Transparent" RadiusX="4" RadiusY="4">
                                    <Rectangle.LayoutTransform>
                                        <RotateTransform Angle="45"/>
                                    </Rectangle.LayoutTransform>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="11" BorderThickness="0" FontSize="25" Style="{StaticResource RhomboidButton}" Command="{Binding OrderingCommand}" CommandParameter="11" Background="Transparent" RenderTransformOrigin="0.658,0.42" Canvas.Left="462" Canvas.Top="262" Height="82" Width="94" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Foreground>
                        <MultiBinding Converter="{StaticResource TableOrderConverter}">
                            <Binding Path="Tables"/>
                            <Binding Source="11"/>
                        </MultiBinding>
                    </Button.Foreground>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Rectangle Stroke="Black" StrokeThickness="1"  Fill="Transparent" RadiusX="4" RadiusY="4">
                                    <Rectangle.LayoutTransform>
                                        <RotateTransform Angle="45"/>
                                    </Rectangle.LayoutTransform>
                                </Rectangle>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
